//时间排序
function queryTimeOrd (obj) {
	var $this = $(obj);
	var orderTime = $this.data("ordertime");
	if (orderTime == "desc") {
		$this.html("▲");
		$this.data("ordertime","asc");
		$("input[name = ordertime]").val("asc");
	} else {
		$this.html("▼");
		$this.data("ordertime","desc");
		$("input[name = ordertime]").val("desc");
	}
	query();
}